<header class="hd">
    <div class="pure-g-r">
        <div class="pure-u-1-3">
            <h1 class="title">
                <a href="/"><img class="logo" src="{{{assetUrl "/img/sushi-large.png"}}}" alt="" role="presentation"></a>
                {{#if title}}{{title}}{{else}}RawGit{{/if}}
            </h1>
        </div>

        <div class="pure-u-2-3">
            <nav class="nav">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/stats">Stats</a></li>
                    <li><a href="/faq">FAQ</a></li>
                    <li><a href="https://github.com/rgrove/rawgit">Source</a></li>
                </ul>
            </nav>
        </div>
    </div>
</header>

<div class="bd">
    <div class="content">
        {{{body}}}
    </div>
</div>

